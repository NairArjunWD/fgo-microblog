<%= simple_form_for(@rayshift) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :post, label: "Want to post something?", input_html: {class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Create a new post ...", autofocus: true %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>